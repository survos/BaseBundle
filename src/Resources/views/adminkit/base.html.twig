                        {% include '@SurvosBase/render_page_menu.html.twig' with {page_title: block('page_title')} %}
                    {% endblock %}
                {% endblock %}

                {{ block('body') }}
            </div>
        </main>

        {% endblock %}
    </div>
</div>
</body>
</html>
